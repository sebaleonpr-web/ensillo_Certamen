@model IEnumerable<enso_Certamen.Models.noticiaGeneral>
@{
    ViewData["Title"] = "Noticias";
}

<div class="container py-4">

    <h2 class="mb-3">Noticias</h2>

    <p>
        <a asp-action="Create" class="btn btn-success">Nueva Noticia</a>
    </p>

    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>TÃ­tulo</th>
                    <th>Resumen</th>
                    <th>Fecha</th>
                    <th>Usuario</th>
                    <th class="text-end"></th>
                </tr>
            </thead>
            <tbody>
            @if (Model == null || !Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center text-muted py-4">
                        No hay noticias registradas.
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.tituloNoticia</td>
                        <td>@item.resumenNoticia</td>
                        <td>@item.fechaNoticia.ToString("yyyy-MM-dd")</td>
                        <td>@(item.GuidUsuarioNavigation?.nombreUser ?? "Sin Usuario")</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.GuidNoticia" class="btn btn-sm btn-primary">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.GuidNoticia" class="btn btn-sm btn-danger ms-1">Eliminar</a>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
