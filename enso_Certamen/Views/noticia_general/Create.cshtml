@model enso_Certamen.Models.noticiaGeneral
@{
    ViewData["Title"] = "Crear Noticia";
}

<div class="container py-4">
    <div class="mx-auto" style="max-width: 900px;">
        <h2 class="mb-4">Crear Noticia</h2>

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="tituloNoticia" class="form-label">Título</label>
                <input asp-for="tituloNoticia" class="form-control" placeholder="Ej: Nuevo anuncio de la comunidad..." />
                <span asp-validation-for="tituloNoticia" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="resumenNoticia" class="form-label">Resumen</label>
                <textarea asp-for="resumenNoticia" class="form-control" rows="3" placeholder="Escribe un breve resumen de la noticia..."></textarea>
                <span asp-validation-for="resumenNoticia" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="contenidoNoticia" class="form-label">Contenido</label>
                <textarea asp-for="contenidoNoticia" class="form-control" rows="6" placeholder="Agrega el contenido completo de la noticia..."></textarea>
                <span asp-validation-for="contenidoNoticia" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="fechaNoticia" class="form-label">Fecha</label>
                    <input asp-for="fechaNoticia" type="date" class="form-control" />
                <span asp-validation-for="fechaNoticia" class="text-danger"></span>
            </div>

        @using Microsoft.AspNetCore.Mvc.Rendering
        @{
            var usuariosItems = ViewBag.Usuarios as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
        }
        <select asp-for="GuidUsuario" class="form-select" asp-items="usuariosItems">
            <option value="">— Sin usuario —</option> <!-- si es opcional -->
        </select>


            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Crear Noticia</button>
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>
