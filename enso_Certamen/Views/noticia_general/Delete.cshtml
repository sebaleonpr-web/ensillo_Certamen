@model enso_Certamen.Models.noticiaGeneral
@{
    ViewData["Title"] = "Eliminar Noticia";
}

<div class="container py-4">
    <div class="mx-auto" style="max-width: 900px;">
        <h2 class="mb-4">Eliminar Noticia</h2>

        <div class="alert alert-warning mb-4" role="alert">
            Â¿Seguro que deseas eliminar la noticia <strong>@Model.tituloNoticia</strong>?
        </div>

        <dl class="row mb-4">
            <dt class="col-sm-3">Resumen</dt>
            <dd class="col-sm-9">@Model.resumenNoticia</dd>

            <dt class="col-sm-3">Contenido</dt>
            <dd class="col-sm-9">@Model.contenidoNoticia</dd>

            <dt class="col-sm-3">Fecha</dt>
            <dd class="col-sm-9">@Model.fechaNoticia.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">Usuario</dt>
            <dd class="col-sm-9">@(Model.GuidUsuarioNavigation?.nombreUser ?? "Sin Usuario")</dd>
        </dl>

        <form asp-action="Delete" asp-route-id="@Model.GuidNoticia" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="GuidNoticia" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>

    </div>
</div>
