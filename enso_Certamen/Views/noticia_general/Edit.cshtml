@model enso_Certamen.Models.NoticiaGeneral
@{
    ViewData["Title"] = "Editar Noticia";
}

<div class="container py-4">
    <div class="mx-auto" style="max-width: 900px;">
        <h2 class="mb-4">Editar Noticia</h2>

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="GuidNoticia" />

            <div class="mb-3">
                <label asp-for="TituloNoticia" class="form-label">TÃ­tulo</label>
                <input asp-for="TituloNoticia" class="form-control" />
                <span asp-validation-for="TituloNoticia" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ResumenNoticia" class="form-label">Resumen</label>
                <textarea asp-for="ResumenNoticia" class="form-control" rows="3"></textarea>
                <span asp-validation-for="ResumenNoticia" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ContenidoNoticia" class="form-label">Contenido</label>
                <textarea asp-for="ContenidoNoticia" class="form-control" rows="6"></textarea>
                <span asp-validation-for="ContenidoNoticia" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FechaNoticia" class="form-label">Fecha</label>
                <input asp-for="FechaNoticia" type="date" class="form-control" />
                <span asp-validation-for="FechaNoticia" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="GuidUsuario" class="form-label">Usuario</label>
                <select asp-for="GuidUsuario" asp-items="ViewBag.Usuarios" class="form-control">
                    <option value="" selected disabled hidden> Selecciona un usuario </option>
                    <option value="@Guid.Empty">Sin usuario</option>
                </select>
                <span asp-validation-for="GuidUsuario" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Guardar cambios</button>
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}