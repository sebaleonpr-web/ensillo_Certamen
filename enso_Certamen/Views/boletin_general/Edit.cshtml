@model enso_Certamen.Models.boletinGeneral
@{
    ViewData["Title"] = "Editar Boletín";
}

<div class="container py-4">
    <div class="mx-auto" style="max-width: 900px;">
        <h2 class="mb-4">Editar Boletín</h2>

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="GuidBoletin" />

            <div class="mb-3">
                <label asp-for="TituloBoletin" class="form-label">Título</label>
                <input asp-for="TituloBoletin" class="form-control" />
                <span asp-validation-for="TituloBoletin" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DescripcionBoletin" class="form-label">Descripción</label>
                <textarea asp-for="DescripcionBoletin" class="form-control" rows="3"></textarea>
                <span asp-validation-for="DescripcionBoletin" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FechaBoletin" class="form-label">Fecha</label>
                <input asp-for="FechaBoletin" type="date" class="form-control" />
                <span asp-validation-for="FechaBoletin" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="GuidNoticia" class="form-label">Noticia</label>
                <select asp-for="GuidNoticia" asp-items="ViewBag.Noticias" class="form-control">
                    <option value="" selected disabled hidden>Selecciona una noticia</option>
                    <option value=""" >Sin noticia</option>

                </select>
                <span asp-validation-for="GuidNoticia" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Guardar cambios</button>
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>
