@model enso_Certamen.Models.BoletinGeneral

<h2>Editar Boletín</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IdBoletin" />

    <div class="form-group">
        <label asp-for="TituloBoletin">Título</label>
        <input asp-for="TituloBoletin" class="form-control" />
        <span asp-validation-for="TituloBoletin" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="DescripcionBoletin">Descripción</label>
        <textarea asp-for="DescripcionBoletin" class="form-control"></textarea>
        <span asp-validation-for="DescripcionBoletin" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="FechaBoletin">Fecha</label>
        <input asp-for="FechaBoletin" type="date" class="form-control" />
        <span asp-validation-for="FechaBoletin" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label for="IdNoticia">Noticia</label>
        <select id="IdNoticia" name="IdNoticia" asp-items="ViewBag.Noticias" class="form-control" required>
            <option value="" disabled hidden>-- Selecciona una noticia --</option>
        </select>
        <span asp-validation-for="IdNoticia" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Volver</a>
</form>
