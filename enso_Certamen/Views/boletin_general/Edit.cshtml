@model enso_Certamen.Models.BoletinGeneral

@{
    ViewData["Title"] = "Editar Boletín";
}

<h1 class="alert alert-dark text-center mt-5">
    Editar Boletín: @Model.TituloBoletin
</h1>

<div class="row">
    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdBoletin" />

            <div class="form-group">
                <label asp-for="TituloBoletin" class="control-label"></label>
                <input asp-for="TituloBoletin" class="form-control" />
                <span asp-validation-for="TituloBoletin" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DescripcionBoletin" class="control-label"></label>
                <textarea asp-for="DescripcionBoletin" class="form-control" rows="4"></textarea>
                <span asp-validation-for="DescripcionBoletin" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaBoletin" class="control-label"></label>
                <input asp-for="FechaBoletin" type="datetime-local" asp-format="{0:yyyy-MM-ddTHH:mm}" class="form-control" />
                <span asp-validation-for="FechaBoletin" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdNoticia" class="control-label"></label>
                <select asp-for="IdNoticia" class="form-control" asp-items="ViewBag.IdNoticia">
                    <option value="">-- Selecciona una noticia --</option>
                </select>
                <span asp-validation-for="IdNoticia" class="text-danger"></span>
            </div>

            <div class="form-group mt-3 text-center">
                <input type="reset" value="Limpiar" class="btn btn-outline-dark w-25" />
                <input type="submit" value="Editar" class="btn btn-success w-25" />
            </div>
        </form>
    </div>
</div>

<div class="text-end">
    <a asp-action="Index" class="btn btn-dark">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
