@model enso_Certamen.Models.BoletinGeneral

<h2>Eliminar Boletín</h2>

<div class="alert alert-warning">
    <p>¿Seguro que deseas eliminar el boletín <strong>@Model.TituloBoletin</strong>?</p>
</div>

<dl class="row">
    <dt class="col-sm-2">Descripción</dt>
    <dd class="col-sm-10">@Model.DescripcionBoletin</dd>

    <dt class="col-sm-2">Fecha</dt>
    <dd class="col-sm-10">@Model.FechaBoletin.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-2">Noticia</dt>
    <dd class="col-sm-10">@Model.IdNoticia</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IdBoletin" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>
