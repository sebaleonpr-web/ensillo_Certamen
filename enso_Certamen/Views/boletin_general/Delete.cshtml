@model enso_Certamen.Models.boletinGeneral
@{
    ViewData["Title"] = "Eliminar Boletín";
}

<div class="container py-4">
    <div class="mx-auto" style="max-width: 900px;">
        <h2 class="mb-4">Eliminar Boletín</h2>

        @*Carga el id del url y carga todos los datos*@
        <div class="alert alert-warning mb-4" role="alert">
            ¿Seguro que deseas eliminar el boletín <strong>@Model.TituloBoletin</strong>?
        </div>

        <dl class="row mb-4">
            <dt class="col-sm-3">Descripción</dt>
            <dd class="col-sm-9">@Model.DescripcionBoletin</dd>

            <dt class="col-sm-3">Fecha</dt>
            <dd class="col-sm-9">@Model.FechaBoletin</dd>

            <dt class="col-sm-3">Noticia</dt>
            <dd class="col-sm-9">@(Model.GuidNoticiaNavigation?.tituloNoticia ?? Model.GuidNoticia.ToString())
</dd>
        </dl>

        @*Carga el metodo post que es delete*@
        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            @*Esconde el guid pero si lo envia*@
            <input type="hidden" asp-for="GuidBoletin" />
            <div class="d-flex gap-2">
            @*Submit carga el post*@
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
