@model enso_Certamen.Models.BoletinGeneral
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


<h2>Nuevo Boletín</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="TituloBoletin">Título</label>
        <input asp-for="TituloBoletin" class="form-control" />
        <span asp-validation-for="TituloBoletin" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="DescripcionBoletin">Descripción</label>
        <textarea asp-for="DescripcionBoletin" class="form-control"></textarea>
        <span asp-validation-for="DescripcionBoletin" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="FechaBoletin">Fecha</label>
        <input asp-for="FechaBoletin" type="date" class="form-control" min="1753-01-01" max="9999-12-31"  />
        <span asp-validation-for="FechaBoletin" class="text-danger"></span>
    </div>

            <div class="form-group mt-3">
            <label asp-for="IdNoticia">Noticia</label>
            <select asp-for="IdNoticia" asp-items="ViewBag.Noticias" class="form-control">
                <option value="" selected disabled hidden>-- Selecciona una noticia --</option>
            </select>
            <span asp-validation-for="IdNoticia" class="invalid-feedback"></span>
        </div>


    <button type="submit" class="btn btn-primary mt-3">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Volver</a>
</form>
