@model enso_Certamen.Models.usuariosGeneral
@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container py-4">
    <div class="mx-auto" style="max-width: 900px;">
        <h2 class="mb-4">Editar Usuario</h2>

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="GuidUsuario" />

            <div class="mb-3">
                <label asp-for="nombreUser" class="form-label">Nombre</label>
                <input asp-for="nombreUser" class="form-control" />
                <span asp-validation-for="nombreUser" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="apellidoUser" class="form-label">Apellido</label>
                <input asp-for="apellidoUser" class="form-control" />
                <span asp-validation-for="apellidoUser" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="emailUser" class="form-label">Correo Electrónico</label>
                <input asp-for="emailUser" type="email" class="form-control" />
                <span asp-validation-for="emailUser" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="contraUser" class="form-label">Contraseña</label>
                <input asp-for="contraUser" type="password" class="form-control" />
                <span asp-validation-for="contraUser" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="GuidRol" class="form-label">Rol</label>
                <select asp-for="GuidRol" asp-items="ViewBag.Roles" class="form-control">
                    <option value="" selected disabled hidden>-- Selecciona un rol --</option>
                </select>
                <span asp-validation-for="GuidRol" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Guardar cambios</button>
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}