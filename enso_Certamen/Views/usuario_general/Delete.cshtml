@model enso_Certamen.Models.usuariosGeneral
@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container py-4">
    <div class="mx-auto" style="max-width: 900px;">
        <h2 class="mb-4 text-danger">Eliminar Usuario</h2>

        <div class="alert alert-warning mb-4" role="alert">
            ¿Seguro que deseas eliminar al usuario <strong>@Model.nombreUser @Model.apellidoUser</strong>?
        </div>

        <dl class="row mb-4">
            <dt class="col-sm-3">Correo</dt>
            <dd class="col-sm-9">@Model.emailUser</dd>

            <dt class="col-sm-3">Rol</dt>
            <dd class="col-sm-9">
                @* Por defecto muestra el Guid del rol.  
                Si tu modelo tiene un nombre de rol, puedes usar: 
                   @Model.GuidRolNavigation?.NombreRol *@
                @Model.GuidRol
            </dd>

            <dt class="col-sm-3">Contraseña</dt>
            <dd class="col-sm-9 text-muted">********</dd>
        </dl>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="GuidUsuario" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
