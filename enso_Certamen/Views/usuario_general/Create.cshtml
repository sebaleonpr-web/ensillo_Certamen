@model enso_Certamen.Models.UsuariosGeneral
@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="container py-4">
    <div class="mx-auto" style="max-width: 900px;">
        <h2 class="mb-4">Crear Usuario</h2>

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="NombreUser" class="form-label">Nombre</label>
                <input asp-for="NombreUser" class="form-control" placeholder="Ej: Sebastián" />
                <span asp-validation-for="NombreUser" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ApellidoUser" class="form-label">Apellido</label>
                <input asp-for="ApellidoUser" class="form-control" placeholder="Ej: León" />
                <span asp-validation-for="ApellidoUser" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EmailUser" class="form-label">Correo Electrónico</label>
                <input asp-for="EmailUser" type="email" class="form-control" placeholder="Ej: usuario@correo.com" />
                <span asp-validation-for="EmailUser" class="text-danger"></span>
            </div>

            <!-- === NUEVO: Contraseña obligatoria en Create === -->
            <div class="mb-3">
            <label asp-for="ContraUser" class="form-label">Contraseña</label>
            <input asp-for="ContraUser" type="password" class="form-control" />
            <span asp-validation-for="ContraUser" class="text-danger"></span>
            </div>

            <div class="mb-4">
            <label asp-for="GuidRol" class="form-label">Rol (opcional)</label>
            <select asp-for="GuidRol"
                    class="form-select"
                    asp-items="@(ViewBag.Roles as IEnumerable<SelectListItem> ?? new List<SelectListItem>())">
                <option value=""selected disabled hidden>Seleccione Rol</option>
                <option value="@Guid.Empty">Sin rol</option>
            </select>
            <span asp-validation-for="GuidRol" class="text-danger"></span>
            </div>


            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Crear Usuario</button>
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>
