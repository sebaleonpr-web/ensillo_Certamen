@model enso_Certamen.Models.RolGeneral
@{
    ViewData["Title"] = "Editar Rol";
}

<div class="container py-4">
    <div class="mx-auto" style="max-width: 900px;">
        <h2 class="mb-4">Editar Rol</h2>

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="GuidRol" />

            <div class="mb-3">
                <label asp-for="NombreRol" class="form-label">Nombre del Rol</label>
                <input asp-for="NombreRol" class="form-control" />
                <span asp-validation-for="NombreRol" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="DescripRol" class="form-label">Descripci√≥n</label>
                <textarea asp-for="DescripRol" class="form-control" rows="3"></textarea>
                <span asp-validation-for="DescripRol" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Guardar cambios</button>
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
