@model enso_Certamen.Models.rolGeneral
@{
    ViewData["Title"] = "Eliminar Rol";
}

<div class="container py-4">
    <div class="mx-auto" style="max-width: 900px;">
        <h2 class="mb-4">Eliminar Rol</h2>

        <div class="alert alert-warning mb-4" role="alert">
            ¿Seguro que deseas eliminar el rol <strong>@Model.nombreRol</strong>?
        </div>

        <dl class="row mb-4">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.nombreRol</dd>

            <dt class="col-sm-3">Descripción</dt>
            <dd class="col-sm-9">@Model.descripRol</dd>
        </dl>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="GuidRol" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
