@model IEnumerable<enso_Certamen.Models.rolGeneral>

@{
    ViewData["Title"] = "Roles";
    var roles = Model ?? new List<enso_Certamen.Models.rolGeneral>(); // evita null
}

<div class="container py-4">

    <h2 class="mb-3">Roles</h2>

    <p>
        <a asp-action="Create" class="btn btn-success">Nuevo Rol</a>
    </p>

    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripci√≥n</th>
                    <th class="text-end"></th>
                </tr>
            </thead>
            <tbody>
                @if (!roles.Any())
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted py-4">
                            No hay roles registrados.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in roles)
                    {
                        <tr>
                            <td>@item.nombreRol</td>
                            <td>@item.descripRol</td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.GuidRol" class="btn btn-sm btn-primary">Editar</a>
                                <a asp-action="Delete" asp-route-id="@item.GuidRol" class="btn btn-sm btn-danger ms-1">Eliminar</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

</div>
