@model enso_Certamen.Models.ComentarioGeneral
@{
    ViewData["Title"] = "Crear Comentario";
}

<div class="container py-4">
    <div class="mx-auto" style="max-width: 900px;">
        <h2 class="mb-4">Crear Comentario</h2>

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="NombrelectorComentario" class="form-label">Nombre del lector</label>
                <input asp-for="NombrelectorComentario" class="form-control" placeholder="Ej: Juan Pérez" />
                <span asp-validation-for="NombrelectorComentario" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EmailLectorComentario" class="form-label">Email del lector</label>
                <input asp-for="EmailLectorComentario" type="email" class="form-control" placeholder="Ej: juan@example.com" />
                <span asp-validation-for="EmailLectorComentario" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ContenidoComentario" class="form-label">Contenido</label>
                <textarea asp-for="ContenidoComentario" class="form-control" rows="4" placeholder="Escribe aquí tu comentario..."></textarea>
                <span asp-validation-for="ContenidoComentario" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FechaComentario" class="form-label">Fecha</label>
                <input asp-for="FechaComentario" type="date" class="form-control" />
                <span asp-validation-for="FechaComentario" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="GuidNoticia" class="form-label">Noticia</label>
                <select asp-for="GuidNoticia" class="form-select" asp-items="ViewBag.Noticias">
                    <option value=""selected disabled hidden>Selecciona una noticia</option>
                    <option value="@Guid.Empty">Sin noticia</option>
                </select>
                <span asp-validation-for="GuidNoticia" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Crear Comentario</button>
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
