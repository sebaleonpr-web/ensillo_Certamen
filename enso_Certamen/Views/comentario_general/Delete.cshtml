@model enso_Certamen.Models.comentarioGeneral
@{
    ViewData["Title"] = "Eliminar Comentario";
}

<div class="container py-4">
    <div class="mx-auto" style="max-width: 900px;">
        <h2 class="mb-4">Eliminar Comentario</h2>

        <div class="alert alert-warning mb-4" role="alert">
            Â¿Seguro que deseas eliminar el comentario de <strong>@Model.nombrelectorComentario</strong>?
        </div>

        <dl class="row mb-4">
            <dt class="col-sm-3">Nombre del lector</dt>
            <dd class="col-sm-9">@Model.nombrelectorComentario</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.emailLectorComentario</dd>

            <dt class="col-sm-3">Contenido</dt>
            <dd class="col-sm-9">@Model.contenidoComentario</dd>

            <dt class="col-sm-3">Fecha</dt>
            <dd class="col-sm-9">@Model.fechaComentario.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">Noticia</dt>
            <dd class="col-sm-9">@(Model.GuidNoticiaNavigation?.tituloNoticia?? "Sin Noticia")</dd>
        </dl>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="GuidComentario" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
