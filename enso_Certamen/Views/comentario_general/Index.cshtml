@model IEnumerable<enso_Certamen.Models.comentarioGeneral>
@{
    ViewData["Title"] = "Comentarios";
}

<div class="container py-4">

    <h2 class="mb-3">Comentarios</h2>

    <p>
        <a asp-action="Create" class="btn btn-success">Nuevo Comentario</a>
    </p>

    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>Lector</th>
                    <th>Email</th>
                    <th>Contenido</th>
                    <th>Fecha</th>
                    <th>Noticia</th>
                    <th class="text-end"></th>
                </tr>
            </thead>
            <tbody>
            @if (Model == null || !Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center text-muted py-4">
                        No hay comentarios registrados.
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.nombrelectorComentario</td>
                        <td>@item.emailLectorComentario</td>
                        <td>
                            @{
                                var texto = item.contenidoComentario ?? string.Empty;
                                var preview = texto.Length > 100 ? texto.Substring(0, 100) + "â€¦" : texto;
                            }
                            @preview
                        </td>
                        <td>@item.fechaComentario.ToString("yyyy-MM-dd")</td>
                        <td>@(item.GuidNoticiaNavigation?.tituloNoticia?? "Sin Noticia")</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.GuidComentario" class="btn btn-sm btn-primary">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.GuidComentario" class="btn btn-sm btn-danger ms-1">Eliminar</a>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>

</div>
