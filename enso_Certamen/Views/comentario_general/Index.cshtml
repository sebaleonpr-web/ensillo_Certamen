@model IEnumerable<enso_Certamen.Models.ComentarioGeneral>

<h2>Comentarios</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Nuevo Comentario</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre del Lector</th>
            <th>Email</th>
            <th>Contenido</th>
            <th>Fecha</th>
            <th>Noticia</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.NombrelectorComentario</td>
            <td>@item.EmailLectorComentario</td>
            <td>@item.ContenidoComentario</td>
            <td>@item.FechaComentario.ToString("yyyy-MM-dd")</td>
            <td>
                <strong>@item.IdNoticia</strong>
                <span class="text-muted"> - @item.GuidComentario</span>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdComentario" class="btn btn-primary btn-sm">Editar</a>
                <a asp-action="Delete" asp-route-id="@item.IdComentario" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
