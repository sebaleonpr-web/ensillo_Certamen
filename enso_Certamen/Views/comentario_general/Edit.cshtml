@model enso_Certamen.Models.comentarioGeneral
@{
    ViewData["Title"] = "Editar Comentario";
}

<div class="container py-4">
    <div class="mx-auto" style="max-width: 900px;">
        <h2 class="mb-4">Editar Comentario</h2>

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="GuidComentario" />

            <div class="mb-3">
                <label asp-for="nombrelectorComentario" class="form-label">Nombre del lector</label>
                <input asp-for="nombrelectorComentario" class="form-control" />
                <span asp-validation-for="nombrelectorComentario" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="emailLectorComentario" class="form-label">Email del lector</label>
                <input asp-for="emailLectorComentario" type="email" class="form-control" />
                <span asp-validation-for="emailLectorComentario" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="contenidoComentario" class="form-label">Contenido</label>
                <textarea asp-for="contenidoComentario" class="form-control" rows="4"></textarea>
                <span asp-validation-for="contenidoComentario" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="fechaComentario" class="form-label">Fecha</label>
                <input asp-for="fechaComentario" type="date" class="form-control" />
                <span asp-validation-for="fechaComentario" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <label asp-for="GuidNoticia" class="form-label">Noticia</label>
                <select asp-for="GuidNoticia" class="form-select" asp-items="@(ViewBag.Noticias as IEnumerable<SelectListItem>)">
                    <option value="">-- Selecciona una noticia --</option>
                </select>
                <span asp-validation-for="GuidNoticia" class="text-danger"></span>
            </div>


            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Guardar cambios</button>
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}