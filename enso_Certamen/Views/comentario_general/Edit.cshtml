@model enso_Certamen.Models.ComentarioGeneral

<h2>Editar Comentario</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IdComentario" />

    <div class="form-group">
        <label asp-for="NombrelectorComentario">Nombre del lector</label>
        <input asp-for="NombrelectorComentario" class="form-control" />
        <span asp-validation-for="NombrelectorComentario" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="EmailLectorComentario">Correo electr√≥nico</label>
        <input asp-for="EmailLectorComentario" type="email" class="form-control" />
        <span asp-validation-for="EmailLectorComentario" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="ContenidoComentario">Contenido del comentario</label>
        <textarea asp-for="ContenidoComentario" class="form-control"></textarea>
        <span asp-validation-for="ContenidoComentario" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="FechaComentario">Fecha</label>
        <input asp-for="FechaComentario" type="date" class="form-control"/>
        <span asp-validation-for="FechaComentario" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label for="IdNoticia">Noticia</label>
        <select id="IdNoticia" name="IdNoticia" asp-items="ViewBag.Noticias" class="form-control" required>
            <option value="" disabled hidden>-- Selecciona una noticia --</option>
        </select>
        <span asp-validation-for="IdNoticia" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Volver</a>
</form>
