@model IEnumerable<enso_Certamen.Models.suscripcionGeneral>
@{
    ViewData["Title"] = "Suscripciones";
}

<div class="container py-4">

    <h2 class="mb-3">Suscripciones</h2>

    <p>
        <a asp-action="Create" class="btn btn-success">Nueva Suscripción</a>
    </p>

    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Fecha</th>
                    <th>Boletín</th>
                    <th class="text-end"></th>
                </tr>
            </thead>
            <tbody>
            @if (Model == null || !Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center text-muted py-4">
                        No hay suscripciones registradas.
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.nombreSuscripcion</td>
                        <td>@item.emailSuscripcion</td>
                        <td>@item.fechaSuscripcion.ToString("yyyy-MM-dd")</td>
                        <td>@item.GuidBoletin</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.GuidSuscripcion" class="btn btn-sm btn-primary">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.GuidSuscripcion" class="btn btn-sm btn-danger ms-1">Eliminar</a>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>

</div>
