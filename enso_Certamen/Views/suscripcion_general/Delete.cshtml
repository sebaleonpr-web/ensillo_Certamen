@model enso_Certamen.Models.suscripcionGeneral
@{
    ViewData["Title"] = "Eliminar Suscripción";
}

<div class="container py-4">
    <div class="mx-auto" style="max-width: 900px;">
        <h2 class="mb-4">Eliminar Suscripción</h2>

        <div class="alert alert-warning mb-4" role="alert">
            ¿Seguro que deseas eliminar la suscripción de <strong>@Model.nombreSuscripcion</strong>?
        </div>

        <dl class="row mb-4">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.nombreSuscripcion</dd>

            <dt class="col-sm-3">Correo Electrónico</dt>
            <dd class="col-sm-9">@Model.emailSuscripcion</dd>

            <dt class="col-sm-3">Fecha</dt>
            <dd class="col-sm-9">@Model.fechaSuscripcion.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">Boletín</dt>
            <dd class="col-sm-9">@Model.GuidBoletin</dd>
        </dl>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="GuidSuscripcion" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
