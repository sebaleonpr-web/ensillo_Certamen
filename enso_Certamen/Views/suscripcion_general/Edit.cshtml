@model enso_Certamen.Models.suscripcionGeneral
@{
    ViewData["Title"] = "Editar Suscripción";
}

<div class="container py-4">
    <div class="mx-auto" style="max-width: 900px;">
        <h2 class="mb-4">Editar Suscripción</h2>

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="GuidSuscripcion" />

            <div class="mb-3">
                <label asp-for="nombreSuscripcion" class="form-label">Nombre</label>
                <input asp-for="nombreSuscripcion" class="form-control" />
                <span asp-validation-for="nombreSuscripcion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="emailSuscripcion" class="form-label">Correo Electrónico</label>
                <input asp-for="emailSuscripcion" type="email" class="form-control" />
                <span asp-validation-for="emailSuscripcion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="fechaSuscripcion" class="form-label">Fecha</label>
                <input asp-for="fechaSuscripcion" type="datetime-local" class="form-control" />
                <span asp-validation-for="fechaSuscripcion" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="GuidBoletin" class="form-label">Boletín</label>
                <select asp-for="GuidBoletin" asp-items="ViewBag.Boletines" class="form-control">
                    <option value="" selected disabled hidden>-- Selecciona un boletín --</option>
                </select>
                <span asp-validation-for="GuidBoletin" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Guardar cambios</button>
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
